# ========================================
# Telegram CLI Bridge Bot Configuration
# ========================================

# Telegram Bot Configuration (REQUIRED)
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"     # Required: Get from @BotFather on Telegram
ALLOWED_USER_ID="your_telegram_user_id_here"          # Required: Your Telegram user ID (numeric)

# OpenCode Configuration (for main_opencode.py)
OPENCODE_MODEL="xai/grok-4-fast-non-reasoning"        # Optional: Format provider/model (e.g., xai/grok-4-fast-non-reasoning, xai/grok-4-fast-reasoning)
WORKING_DIRECTORY=""                                   # Optional: Override working directory (leave empty to use directory where tg-bridge is run)
AUTO_CONTINUE=true                                      # Optional: Auto-continue to next task (default: true)
REQUIRE_APPROVAL=false                                  # Optional: Require approval to mark tasks complete (default: false)

# Enhanced Workflow Features (NEW - v2.0)
ENABLE_PLAN_EXECUTE=true                               # Optional: Use plan-and-execute pattern (default: true)
ENABLE_VERIFICATION=true                               # Optional: Verify work before marking complete (default: true)
ENABLE_REFLECTION=true                                 # Optional: Reflect and learn from experience (default: true)
ENABLE_CHECKPOINTING=true                              # Optional: Save checkpoints for resumability (default: true)
ENABLE_SUBTASK_DECOMPOSITION=true                      # Optional: Use task-master subtasks (default: true)
ENABLE_PROGRESS_LOGGING=true                           # Optional: Log progress to task-master (default: true)
ENABLE_MULTI_STRATEGY_RETRY=true                       # Optional: Use different strategies per retry (default: true)
MAX_RETRY_ATTEMPTS=4                                   # Optional: Maximum retry attempts (default: 4)
CHECKPOINT_DIR="./.bot_checkpoints"                    # Optional: Checkpoint storage directory (default: ./.bot_checkpoints)

# MCP Agent Configuration (for main_langchain.py)
AGENT_MODEL="claude-sonnet-4-5-20250929"               # Optional: Model for Agent (default: claude-sonnet-4-5-20250929)
TASKMASTER_MODEL="claude-sonnet-4-5-20250929"          # Optional: Model for TaskMaster (default: claude-sonnet-4-5-20250929)

# Legacy CLI Configuration (for main.py)
CLI_COMMAND="claude"                                   # Required: Command to launch CLI (default: "claude")
AGENT_TOOLS="Bash,Read,Write,Edit,Glob,Grep"          # Optional: Tools for Agent (default shown)
TASKMASTER_TOOLS="Bash(task-master *)"                 # Optional: Tools for TaskMaster (default shown)

# ========================================
# Task Master AI API Keys
# ========================================

# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...